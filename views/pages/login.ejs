<%- include('../partials/header') %>

<!-- Premium Login Section -->
<section class="registration-section">
  <div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
      <div class="col-lg-5 col-md-7 col-sm-9">
        
        <!-- Login Card -->
        <div class="registration-card login-card" data-aos="fade-up" data-aos-duration="800">
          
          <!-- Card Header -->
          <div class="registration-header text-center mb-4">
            <div class="header-icon mb-3">
              <i data-lucide="log-in" class="registration-icon"></i>
            </div>
            <h1 class="registration-title">Welcome Back</h1>
            <p class="registration-subtitle">Sign in to continue your mental wellness journey</p>
          </div>

          <!-- Login Form -->
          <form action="/login" method="POST" class="registration-form login-form">
            
            <!-- Username Field -->
            <div class="form-group mb-4" data-aos="fade-up" data-aos-delay="100">
              <label class="form-label premium-label">
                <i data-lucide="user" class="label-icon"></i>
                Username
              </label>
              <div class="input-wrapper">
                <input 
                  type="text" 
                  name="username" 
                  class="form-control premium-input" 
                  placeholder="Enter your username"
                  required
                >
                <div class="input-focus-border"></div>
              </div>
            </div>

            <!-- Password Field -->
            <div class="form-group mb-4" data-aos="fade-up" data-aos-delay="200">
              <label class="form-label premium-label">
                <i data-lucide="lock" class="label-icon"></i>
                Password
              </label>
              <div class="input-wrapper">
                <input 
                  type="password" 
                  name="password" 
                  class="form-control premium-input" 
                  placeholder="Enter your password"
                  required
                >
                <button type="button" class="password-toggle" onclick="togglePassword(this)">
                  <i data-lucide="eye" class="toggle-icon"></i>
                </button>
                <div class="input-focus-border"></div>
              </div>
            </div>

            <!-- Remember Me & Forgot Password -->
            <div class="form-group mb-4 d-flex justify-content-between align-items-center" data-aos="fade-up" data-aos-delay="300">
              <div class="form-check premium-checkbox">
                <input class="form-check-input" type="checkbox" id="remember">
                <label class="form-check-label" for="remember">
                  Remember me
                </label>
              </div>
              <a href="/forgot-password" class="premium-link forgot-link">
                Forgot Password?
              </a>
            </div>

            <!-- Submit Button -->
            <div class="form-group mb-4" data-aos="fade-up" data-aos-delay="400">
              <button type="submit" class="btn btn-premium w-100 registration-btn">
                <span class="btn-text">Sign In</span>
                <i data-lucide="arrow-right" class="btn-icon"></i>
                <div class="btn-shimmer"></div>
              </button>
            </div>

            <!-- Social Login Options -->
            <div class="social-divider" data-aos="fade-up" data-aos-delay="500">
              <span class="divider-text">Or continue with</span>
            </div>

            <div class="social-buttons" data-aos="fade-up" data-aos-delay="600">
              <button type="button" class="btn social-btn google-btn">
                <svg width="20" height="20" viewBox="0 0 24 24" class="social-icon">
                  <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                  <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                  <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                  <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                </svg>
                Google
              </button>
              <button type="button" class="btn social-btn github-btn">
                <i data-lucide="github" class="social-icon"></i>
                GitHub
              </button>
            </div>

            <!-- Register Link -->
            <div class="text-center" data-aos="fade-up" data-aos-delay="700">
              <p class="login-prompt">
                Don't have an account? 
                <a href="/register" class="premium-link">Create one here</a>
              </p>
            </div>

          </form>

          <!-- Trust Indicators -->
          <div class="trust-badges" data-aos="fade-up" data-aos-delay="800">
            <div class="trust-item">
              <i data-lucide="shield-check" class="trust-icon"></i>
              <span>Secure Login</span>
            </div>
            <div class="trust-item">
              <i data-lucide="clock" class="trust-icon"></i>
              <span>Quick Access</span>
            </div>
            <div class="trust-items">
              <i data-lucide="heart" class="trust-icon"></i>
              <span>Welcome Back</span>
            </div>
          </div>

        </div>

        <!-- Background Decorations -->
        <div class="registration-bg-elements">
          <div class="bg-circle circle-1"></div>
          <div class="bg-circle circle-2"></div>
          <div class="bg-circle circle-3"></div>
        </div>

      </div>
    </div>
  </div>
</section>

<%- include('../partials/footer') %>

